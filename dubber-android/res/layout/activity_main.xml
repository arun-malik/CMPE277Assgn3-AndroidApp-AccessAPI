<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/edtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetWeatherUpdates"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:ems="10" />

    <TextView
        android:id="@+id/txtWeatherValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblCity"
        android:layout_alignRight="@+id/edtCity"
        android:layout_below="@+id/btnGetWeatherUpdates"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnGetWeatherUpdates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="38dp"
        android:layout_toLeftOf="@+id/toggleButton1"
        android:text="Get Weather Info" />

    <ToggleButton
        android:id="@+id/tglCelciusFaranheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edtCity"
        android:layout_below="@+id/edtCity"
        android:layout_marginRight="15dp"
        android:textOff="C"
        android:textOn= "F"
         />

    <TextView
        android:id="@+id/lblCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edtCity"
        android:layout_alignLeft="@+id/btnGetWeatherUpdates"
        android:layout_alignTop="@+id/edtCity"
        android:text="City:" />

    <Button
        android:id="@+id/btnBrowseSJSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/toggleButton1"
        android:text="Browse SJSU" />

  
 
</RelativeLayout>